{
  "name": "nadesiko3-simple-handlebars-template",
  "version": "1.0.0",
  "description": "プログラミング言語「なでしこ3」で Handlebars テンプレートを扱うためのシンプルな JS プラグイン。",
  "keywords": [
    "なでしこ",
    "nadesiko",
    "nadesiko3",
    "handlebars",
    "mustache",
    "template"
  ],
  "homepage": "https://github.com/nekonoshiri/nadesiko3-simple-handlebars-template",
  "bugs": {
    "url": "https://github.com/nekonoshiri/nadesiko3-simple-handlebars-template/issues"
  },
  "license": "CC0-1.0",
  "author": {
    "name": "nekonoshiri",
    "url": "https://github.com/nekonoshiri"
  },
  "files": [
    "index.js",
    "nadesiko3-simple-handlebars-template.js"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nekonoshiri/nadesiko3-simple-handlebars-template.git"
  },
  "scripts": {
    "build": "rollup --config",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test:cnako": "node --test --disable-warning=ExperimentalWarning test-runner.js # Note. 'node:fs/promises' モジュールの glob 関数はまだ実験的機能のため、警告を抑えています",
    "test:wnako": "playwright test",
    "test": "npm run test:cnako && npm run test:wnako",
    "bump": "./bump.sh"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "nadesiko3": "^3.7.13",
    "playwright": "^1.56.0",
    "prettier": "^3.8.0",
    "rollup": "^4.55.1",
    "rollup-plugin-license": "^3.6.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module"
}
